package fr.igm.cascabeta;
import java.util.Collection;
import java.util.List;
import java.util.Random;
import java.util.Objects;

public class WildlifePile {
  private List<WildlifeToken> pioche;
  public WildlifePile() {
    pioche = new ArrayList<>();
    //il y a 20 token de chaque type
    for(var i =0; i<20;i++) {
      pioche.add(WildlifeToken.SALMON);
      pioche.add(WildlifeToken.BEAR);
      pioche.add(WildlifeToken.HAWK);
      pioche.add(WildlifeToken.FOX);
      pioche.add(WildlifeToken.ELK);
    }
    melanger();
  }
  public void melanger() {
    Collections.shuffle(pioche, new Random());
  }
  
  
  
}
